<!-- including header content which is common for all pages -->
<%- include ../layouts/header.ejs %>
<% if(messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>
<% if(messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>
<form action="/users/edit/<%= id %>" method="post" name="form1">
	<table width="25%" border="0">
		<tr>
			<td>name
			</td>
			<td><input type="text" name="name" id="name" value="<%= name %>"><
			/td>
		</tr>
		<tr>
			<td>price
			</td>
			<td><input type="text" name="price" value="<%= price %>">
			</td>
		</tr>
		<tr>
			<td>description
			</td>
			<td><input type="text" name="description" value="<%= description %>">
			</td>
		</tr>
		<tr>
			<td>color
			</td>
			<td><input type="text" name="color" value="<%= color %>">
			</td>
		</tr>
		<tr>
			<td>category
			</td>
			<td><input type="text" name="category" value="<%= category %>">
			</td>
		</tr>
		<tr>
			<td>brand
			</td>
			<td><input type="text" name="brand" value="<%= brand %>">
			</td>
		</tr>
		<tr>
			<td>product_status
			</td>
			<td><input type="radio" name="product_status" value="available" checked>available<br>
